{
  "name": "tarumt-attendance-app",
  "version": "1.0.0",
  "description": "TARUMT Student Attendance Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.tarumt.attendance",
    "productName": "TARUMT Attendance",
    "files": [
      "main.js",
      "preload.js",
      "api/**/*",
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.education",
      "darkModeSupport": true,
      "identity": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kongjiyu/takeAttendanceWebsite.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/kongjiyu/takeAttendanceWebsite/issues"
  },
  "homepage": "https://github.com/kongjiyu/takeAttendanceWebsite#readme",
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
